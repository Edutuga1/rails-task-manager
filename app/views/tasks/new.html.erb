<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control" %>
  </div>

  <%= form.submit "Create Task", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Tasks', tasks_path %>
